{
  "name": "nest-schematic-poc",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Mimo powerful tool to scaffold CQRS and Onion Architecture ",
  "main": "dist/index.js",
  "schematics": "./dist/collection.json",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc && tsc-alias",
    "postbuild": "npm run copy:collection && npm run copy:lib",
    "copy:lib": "cpx src/lib/**/files/**/*.* dist/lib",
    "copy:collection": "cpx src/collection.json dist && cpx src/lib/**/schema.json dist/lib",
    "prepare": "npm run build",
    "publish": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nestjs/schematics.git"
  },
  "dependencies": {
    "@angular-devkit/core": "16.1.1",
    "@angular-devkit/schematics": "16.1.1",
    "chalk": "^4.1.2",
    "ts-morph": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "18.17.1",
    "cpx": "1.5.0",
    "shx": "^0.3.4",
    "ts-node": "10.9.1",
    "tsc-alias": "^1.8.7",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "typescript": ">=4.8.2"
  }
}
