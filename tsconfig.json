{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    },
    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/lib", "src/core", "src/index.ts"],
  "exclude": ["node_modules", "src/**/files/**"]
}
